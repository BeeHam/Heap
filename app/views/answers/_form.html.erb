<div class="panel-body col-xs-8 col-xs-offset-2">
  <%= form_for [@question, @answer] do |f| %>
  <div class="form-group">

    <%= f.text_field :answer_author, class: "form-control", placeholder: "Name" %>
  </div>
  <div class="form-group">

    <%= f.text_area :answer_content, rows: 10, class: "form-control", placeholder: "Content" %>
  </div>
    <%= f.submit "Submit", class: "btn btn-success btn-block btn-lg" %>
  <% end %>
</div>
