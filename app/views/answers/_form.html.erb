<div class="form-panel">
  <%= form_for [@question, @answer] do |f| %>
  <div class="form-group">
    <%= f.label :answer_author %>
    <%= f.text_field :answer_author, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :answer_content %>
    <%= f.text_area :answer_content, rows: 10, class: "form-control" %>
  </div>
    <%= f.submit "Answer", class: "btn btn-primary" %>
  <% end %>
</div>
