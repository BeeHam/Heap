<%= form_for @question do |f| %>
  <%= f.label :question_content %>
  <%= f.text_field :question_content %>
  <br>
  <%= f.label :question_author %>
  <%= f.text_field :question_author %>
  <br>
  <%= f.label :tag_list, "Tags (separated by commas)" %><br />
  <%= f.text_field :tag_list %>
  <br>
  <%= f.submit "Ask" %>
<% end %>
