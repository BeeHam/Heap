<div class="form-panel">
  <%= form_for [@section, @question] do |f| %>
  <div class="form-group">
    <%= f.label :question_title %>
    <%= f.text_field :question_title, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :question_author %>
    <%= f.text_field :question_author, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :question_content %>
    <%= f.text_area :question_content, rows: 10, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :tag_list, "Tags (separated by commas)" %><br />
    <%= f.text_field :tag_list, class: "form-control" %>
  </div>

    <%= f.submit "Ask", class: "btn btn-primary" %>
  <% end %>
</div>
